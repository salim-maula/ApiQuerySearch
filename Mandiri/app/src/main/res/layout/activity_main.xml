<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <Button
        style="@style/myButton"
        android:id="@+id/recyclerViewSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycler View String"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recyclerViewDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycler View Object"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewSatu" />

    <Button
        android:id="@+id/recyclerViewTiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycler View Json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewDua" />

    <Button
        android:id="@+id/recyclerViewEmpat"
        android:text="Recycler View Api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTiga" />

    <Button
        android:text="Custom JSON"
        android:id="@+id/recycleViewLima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewEmpat" />

</androidx.constraintlayout.widget.ConstraintLayout>